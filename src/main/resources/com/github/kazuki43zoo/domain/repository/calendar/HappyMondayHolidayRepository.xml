<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.kazuki43zoo.domain.repository.calendar.HappyMondayHolidayRepository">

    <select id="findAll" resultType="HappyMondayHoliday">
        SELECT
            target_month
            ,target_week
            ,holiday_name
            ,holiday_name_ja
            ,begin_year
            ,end_year
        FROM
            happy_monday_holiday
        ORDER BY
            target_month
            ,target_week
    </select>

</mapper>